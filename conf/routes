# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/login						controllers.Application.login()
POST	/login						controllers.Application.authenticate()
GET		/logout						controllers.Application.logout()

#FinanceFolder
GET 	/folders					controllers.FinanceFolderController.index()
POST	/folders					controllers.FinanceFolderController.addFolder()
GET 	/folders/list				controllers.FinanceFolderController.listFolders()

#Transactions
GET		/transaction/list			controllers.TransactionController.listTransactions()
POST	/transaction/add/:folder	controllers.TransactionController.addTransaction(folder:String)

#Users
GET		/users						controllers.UserController.listUsers()	

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
